.pay
	width 100%
	height 100%
	background-color rgba(0,0,0,.4)
	position fixed
	top 0
	z-index 6
	.pay_main
		width 400rpx
		height 220rpx
		padding 20rpx
		background-color white
		border-radius 10rpx
		box-shadow 0 0 3px black
		position absolute
		left 50%
		top 50%
		transform translate(-50%,-50%)
		.pay_text
			font-size 14px
			color #007AFF
			text-align center
			line-height 30px
		.pay_fix,.pay_giveup
			width 180rpx
			height 30px
			border-radius 5px
			text-align center
			line-height 30px
			background-color #C0C0C0
			display inline-block
		.pay_fix
			margin-right 40rpx
			background-color #4CD964
			
			